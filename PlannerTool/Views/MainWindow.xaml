<Window x:Class="PlannerTool.Views.MainWindow"
        x:Name="MainWindowUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlannerTool.Views"
        xmlns:vm="clr-namespace:PlannerTool.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Info" Command="{Binding PropInfoClicked}" CommandParameter="{Binding ElementName=MainWindowUI}"/>
        </Menu>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <TextBox Margin="10" TextWrapping="NoWrap" Width="300"/>
                <TextBox Margin="10" Height="200"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Calendar Margin="10"/>
                <Button Content="Press Here" Command="{Binding CommandProp}" CommandParameter="{Binding ElementName=MainWindowUI}"/>
            </StackPanel>

        </StackPanel>
    </DockPanel>
</Window>
